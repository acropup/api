upstream hackspace_api {
    server 127.0.0.1:3000;
}

server {
    server_name www.isvhsopen.com isvhsopen.com;
    location / {
        proxy_pass http://hackspace_api/s/vhs/data/door/isvhsopen_until/fullpage;
        break;
    }
}

server {
    server_name api.hackspace.ca vhs.recollect.net;
    keepalive_timeout 0;
    deny 216.81.62.52;
    deny 70.71.133.59;
    deny 209.139.197.120;

    location / {
	proxy_pass http://hackspace_api;
	break;
    }
}
